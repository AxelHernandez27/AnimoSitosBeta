<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bienvenida"
    android:background="@drawable/login_background"
    android:padding="16dp">

    <!-- Logo principal, centrado en la parte superior -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Contenedor con fondo de globo de texto -->

    <!-- Imagen de la asistente -->

    <LinearLayout
        android:id="@+id/welcome_container"
        android:layout_width="351dp"
        android:layout_height="234dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/globodetexto"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <!-- Texto de bienvenida personalizado con el nombre del usuario -->

        <!-- Mensaje principal -->

        <!-- Agregado margen inferior -->
        />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="¡Hola, [Nombre del Usuario]!"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Soy Lola, y seré tu guía en esta increíble aventura con tu pequeño(a)"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/additional_message"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="¡Estaré siempre contigo!\nSi necesitas algo solo búscame en el icono con mi foto, será un placer ayudarte..."
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/asistente"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/asistente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
