<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <!-- Logo de la aplicación -->
            <ImageView
                android:layout_width="250dp"
                android:layout_height="130dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Contenedor que permite superponer el CardView y la imagen -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <!-- Imagen del doctor, sobrepuesta y elevada -->
                <ImageView
                    android:id="@+id/doctorImage"
                    android:layout_width="203dp"
                    android:layout_height="202dp"
                    android:layout_gravity="center_horizontal"
                    android:translationY="-5dp"
                    android:translationZ="15dp"
                    android:src="@drawable/doctor"
                    android:background="@drawable/circular_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen de doctor" />

                <!-- Nombre del doctor sobre la imagen -->
                <TextView
                    android:id="@+id/doctorNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Nombre Apellido"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="171dp"
                    android:background="#80000000"
                    android:padding="1dp"
                    android:gravity="center"
                    android:translationZ="20dp" /> <!-- Para que el texto esté frente a la imagen -->

                <!-- CardView principal -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#0A689F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- RatingBar para calificación dentro del CardView -->
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="110dp"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1"
                            android:layout_marginBottom="5dp"
                            android:progressTint="@android:color/holo_orange_light"
                            android:backgroundTint="@color/white" />

                        <!-- Cuadro de texto para comentarios -->
                        <EditText
                            android:id="@+id/comentarioText"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="Escribe tu comentario aquí"
                            android:background="@drawable/rounded_edittext_background"
                            android:padding="10dp"
                            android:textColor="#000000"
                            android:layout_marginBottom="10dp" />

                        <!-- Botón de comentar -->
                        <Button
                            android:id="@+id/comentarButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comentar"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#007BFF"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp" />

                        <!-- Lista de comentarios de otros usuarios -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comentarios de otros usuarios"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_gravity="start" />

                        <LinearLayout
                            android:id="@+id/commentsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <!-- Ejemplo de un comentario -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:background="@drawable/comment_background"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/person_24px"
                                    android:layout_gravity="center_vertical"
                                    android:scaleType="centerCrop"
                                    android:background="@drawable/circular_background"
                                    android:contentDescription="Icono de usuario" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Este es un comentario de ejemplo para mostrar cómo se verá el diseño de los comentarios."
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
