<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp">

    <!-- ScrollView que envuelve todo el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo de la aplicación -->
            <ImageView
                android:layout_width="250dp"
                android:layout_height="130dp"
                android:src="@drawable/logo"
                android:layout_gravity="center" />

            <!-- Card principal que contiene el contenido general -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#0A689F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Título dentro de la Card principal -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registros"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal" />

                    <!-- Card interna para el audio con color amarillo y blanco -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFEB3B"> <!-- Fondo amarillo -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <!-- Título del Audio en la parte superior -->
                            <TextView
                                android:id="@+id/audioTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Título del Audio"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="8dp" />

                            <!-- Botón de reproducción/pausa a la izquierda debajo del título -->

                            <!-- Barra de progreso del audio -->
                            <ImageButton
                                android:id="@+id/btnPlayPause"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/audioTitle"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="-17dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Play/Pause"
                                android:src="@drawable/play_pause_24px"
                                app:tint="#000000" />

                            <SeekBar
                                android:id="@+id/seekBarAudio"
                                android:layout_width="155dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/audioTitle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="94dp"
                                android:layout_toEndOf="@id/btnPlayPause"
                                android:max="100"
                                android:progress="0" />

                            <!-- Botones de Editar y Eliminar a la derecha -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="horizontal"
                                android:layout_below="@id/audioTitle"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp">

                                <ImageButton
                                    android:id="@+id/btnEdit"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:contentDescription="Editar"
                                    android:src="@drawable/edit_24px"
                                    app:tint="#000000"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="-10dp"/>

                                <ImageButton
                                    android:id="@+id/btnDelete"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/delete_24px"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:contentDescription="Eliminar"
                                    app:tint="#000000"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="-10dp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Icono del perfil en la esquina inferior derecha -->
                    <ImageView
                        android:id="@+id/userIcon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        android:src="@drawable/asistente"
                        android:background="@drawable/circular_background"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:scaleType="centerCrop"
                        android:padding="10dp"
                        android:contentDescription="Icono de usuario" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
