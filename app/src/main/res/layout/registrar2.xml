<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register2"
    android:background="@drawable/login_background"
    android:gravity="top"
    android:padding="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#0A689F">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información de padre o madre"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"/>

                <!-- Etiqueta y campo de texto para el nombre -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textColor="#070707"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    />

                <!-- Etiqueta y campo de texto para la edad -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edad"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textColor="#070707"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="30dp"
                    />

                <!-- Campos de informacion general del niño-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información general del niño"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"/>


                <!-- Etiqueta y campo de texto para la nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/childname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textColor="#070707"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    />

                <!-- Etiqueta y campo de texto para genero-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genero"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textColor="#070707"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    />
                <!-- Etiqueta y campo de texto para edad-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edad"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/childage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textColor="#070707"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    />


                <!-- Etiqueta y campo de texto para enfermedades-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enfermedades"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/diseases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    />

                <!-- Botón Ingresar -->
                <Button
                    android:id="@+id/btn_ingresar"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Ingresar"
                    android:backgroundTint="#F3CF35"
                    android:textColor="#070707"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>